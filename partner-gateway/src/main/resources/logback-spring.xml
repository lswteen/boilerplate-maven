<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Spring Boot의 기본 로깅 설정을 포함 -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- 공통 속성 정의 -->
    <springProperty name="SPRING_APPLICATION_NAME" source="spring.application.name"/>
    <property name="LOG_PATH" value="./logs"/>
    <springProperty name="TIMEZONE" source="logging.timezone" defaultValue="Asia/Seoul"/>

    <!-- 로그 패턴 정의 -->
    <property name="CONSOLE_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} %clr(${LOG_LEVEL_PATTERN:-%5p}) - %clr(%-36.36logger{36}){magenta} - %msg%n"/>

    <property name="FILE_PATTERN"
              value="timestamp:%d{yyyy-MM-dd HH:mm:ss.SSS, ${TIMEZONE}}, severity:${LOG_LEVEL_PATTERN:-%5p},${PID:- },service:${SPRING_APPLICATION_NAME:-},serverIp:${java.rmi.server.hostname:-127.0.0.1},hostName:${cp.hostname:-localhost} --- [%t] %-40.40logger{39} : %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}%n"/>

    <property name="LOG_FILE" value="app"/>

    <!-- Console Appender -->
    <appender name="CONSOLE_APPENDER" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_PATTERN}</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <!-- File Appender -->
    <appender name="FILE_APPENDER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${LOG_FILE}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/old/${LOG_FILE}-%d{yyyyMMdd}.%i.log.gz</fileNamePattern>
            <maxHistory>60</maxHistory>
            <maxFileSize>300MB</maxFileSize>
            <totalSizeCap>75GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${FILE_PATTERN}</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <!-- Error File Appender -->
    <appender name="FILE_ERROR_APPENDER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/error.log</file>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/old/${LOG_FILE}-error-%d{yyyyMMdd}.%i.log.gz</fileNamePattern>
            <maxHistory>60</maxHistory>
            <maxFileSize>300MB</maxFileSize>
            <totalSizeCap>75GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${FILE_PATTERN}</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <!-- Async Appender -->
    <appender name="FILE_ASYNC_APPENDER" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="FILE_APPENDER"/>
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
        <neverBlock>true</neverBlock>
    </appender>

    <!-- Access Log Appender -->
    <appender name="ACCESS_LOG_APPENDER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/access_log.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/old/access_log.log-%d{yyyyMMdd}.%i.log.gz</fileNamePattern>
            <maxHistory>60</maxHistory>
            <maxFileSize>300MB</maxFileSize>
            <totalSizeCap>75GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <!-- Access Log Async Appender -->
    <appender name="ACCESS_LOG_ASYNC_APPENDER" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="ACCESS_LOG_APPENDER"/>
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
        <neverBlock>true</neverBlock>
    </appender>

    <!-- Custom JSON Appender -->
    <appender name="CUSTOM_JSON_APPENDER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/custom.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/old/custom-%d{yyyyMMdd}.%i.log.gz</fileNamePattern>
            <maxHistory>60</maxHistory>
            <maxFileSize>300MB</maxFileSize>
            <totalSizeCap>75GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>[{\\"svc_nation_cd\\":\\"%X{svc_nation_cd}\\",\\"app_no\\":%X{appNo},\\"logtype\\":1,\\"contexturl\\":\\"%X{contexturl}\\",\\"useragent\\":\\"%X{useragent}\\",\\"postion\\":%X{postion},\\"location\\":\\"%X{location}\\",\\"targetserver\\":\\"%X{targetserver}\\",\\"message\\":\\"PsgGateway\\",\\"detailmessage\\":\\"%msg\\",\\"page_no\\":%X{page_no},\\"device_info\\":\\"%X{device_info}\\",\\"log_dt\\":\\"%d{yyyy-MM-dd'T'HH:mm:ss.SSS'Z'}\\",\\"client_ip\\":\\"%X{clientIP}\\"}]%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- Async wrapper for Custom JSON Appender -->
    <appender name="ASYNC_CUSTOM_JSON_APPENDER" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="CUSTOM_JSON_APPENDER"/>
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
        <neverBlock>true</neverBlock>
    </appender>

    <!-- 기본 Logger 설정 -->
    <logger name="java.sql" level="INFO"/>
    <logger name="org.apache" level="WARN"/>
    <logger name="org.hibernate" level="INFO"/>
    <logger name="org.mybatis.spring" level="INFO"/>
    <logger name="org.springframework" level="INFO"/>
    <logger name="com.netflix.discovery" level="INFO"/>

    <!-- Custom JSON Logger -->
    <logger name="com.farfarcoder" additivity="false" level="INFO">
        <appender-ref ref="ASYNC_CUSTOM_JSON_APPENDER"/>
        <appender-ref ref="FILE_ASYNC_APPENDER"/>
    </logger>

    <!-- Local 환경 설정 -->
    <springProfile name="local">
        <logger name="com.farfarcoder" level="DEBUG"/>
        <logger name="springfox" level="ERROR"/>
        <logger name="com.zaxxer.hikari" level="DEBUG"/>

        <logger name="com.farfarcoder.gateway" level="ERROR">
            <appender-ref ref="FILE_ERROR_APPENDER"/>
        </logger>

        <logger name="org.springframework.cloud.gateway.filter" level="ERROR">
            <appender-ref ref="FILE_ERROR_APPENDER"/>
        </logger>

        <root level="INFO">
            <appender-ref ref="CONSOLE_APPENDER"/>
            <appender-ref ref="FILE_ASYNC_APPENDER"/>
        </root>
    </springProfile>

    <!-- Development 환경 설정 -->
    <springProfile name="dev">
        <logger name="com.farfarcoder" level="DEBUG"/>

        <logger name="reactor.netty.http.server.AccessLog" level="INFO">
            <appender-ref ref="ACCESS_LOG_ASYNC_APPENDER"/>
        </logger>

        <root level="INFO">
            <appender-ref ref="FILE_ASYNC_APPENDER"/>
            <appender-ref ref="FILE_ERROR_APPENDER"/>
        </root>
    </springProfile>

    <!-- Staging 환경 설정 -->
    <springProfile name="stg">
        <logger name="com.farfarcoder" level="INFO"/>

        <logger name="reactor.netty.http.server.AccessLog" level="INFO">
            <appender-ref ref="ACCESS_LOG_ASYNC_APPENDER"/>
        </logger>

        <root level="INFO">
            <appender-ref ref="FILE_ASYNC_APPENDER"/>
            <appender-ref ref="FILE_ERROR_APPENDER"/>
        </root>
    </springProfile>

    <!-- Production 환경 설정 -->
    <springProfile name="release">
        <logger name="com.farfarcoder" level="INFO"/>

        <logger name="reactor.netty.http.server.AccessLog" level="INFO">
            <appender-ref ref="ACCESS_LOG_ASYNC_APPENDER"/>
        </logger>

        <logger name="org.springframework.cloud.gateway" level="ERROR">
            <appender-ref ref="FILE_ERROR_APPENDER"/>
        </logger>

        <root level="INFO">
            <appender-ref ref="FILE_ASYNC_APPENDER"/>
            <appender-ref ref="FILE_ERROR_APPENDER"/>
        </root>
    </springProfile>
</configuration>