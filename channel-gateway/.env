# SSL/TLS 설정
SSL_KEYSTORE_PASSWORD=changeit
SSL_KEYSTORE_PATH=classpath:keystore/keystore.p12
SSL_KEYSTORE_TYPE=PKCS12
SSL_KEY_ALIAS=channel-gateway

# 서버 포트 설정
SERVER_HTTPS_PORT=8443
SERVER_HTTP_PORT=8080

# HTTP → HTTPS 리다이렉션 활성화 여부
HTTP_REDIRECT_ENABLED=false

# Spring 프로파일
SPRING_PROFILES_ACTIVE=local

# 보안 설정
SECURITY_USER_NAME=user
SECURITY_USER_PASSWORD=user_dev